@model Core.ViewModel.CommentCreateEditDeleteViewModel

@{    ViewData["Title"] = "Create Comment";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Create Comment</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="PostId" />
                    <input type="hidden" asp-for="ParentCommentId" />

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Content" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Submit Comment" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@model Core.ViewModel.CommentCreateEditDeleteViewModel

@{   ViewData["Title"] = "Delete Comment";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Delete Comment</h4>
            </div>
            <div class="card-body">
                <h5 class="card-title">Are you sure you want to delete this comment?</h5>
                
                <div class="alert alert-secondary mt-3">
                    <p class="mb-0">@Model.Content</p>
                </div>
                
                <p class="text-muted">This action cannot be undone.</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="PostId" />

                    <div class="d-flex justify-content-end mt-4">
                        <a asp-action="Index" asp-controller="Post" asp-route-id="@Model.PostId" class="btn btn-secondary me-2">Cancel</a>
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
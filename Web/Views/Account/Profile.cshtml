@model Core.ViewModel.ProfileViewModel

@{
    ViewData["Title"] = "Profile";
    
}

<h1>Profile</h1>
<h2>@Model.Name</h2>
<div>
    @foreach(var post in Model.posts)
    {
        <partial name="_PostCardPartial" model="post" />
        @if (Model.IsOwner)
        {
            <a asp-action="Edit" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-primary">Edit</a>
            <a asp-action="Delete" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-danger">Delete</a>
        }
        else
        {

        }
        <hr />
    }

    <hr>

    @Html.PagedListPager(Model.posts, page => Url.Action("Profile", new { page,username=Model.Name }))
</div>

@model IPagedList<Community>

@{    ViewData["Title"] = "Communities";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">Communities</h1>
    <a asp-action="Create" class="btn btn-primary">Create Community</a>
</div>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var community in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">
                        <a class="text-dark text-decoration-none" asp-action="Details" asp-route-id="@community.Id">r/@community.Name</a>
                    </h5>
                    <p class="card-text text-muted small flex-grow-1">@community.Description</p>
                    @* <div class="text-muted small mb-2">
                        <i class="bi bi-people-fill"></i> @community.Memberships.Count() Members
                    </div> *@
                    <a asp-action="Details" asp-route-id="@community.Id" class="btn btn-outline-primary mt-auto">View Community</a>
                </div>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
    {
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    })
</div>
@model Core.Models.Community

@{    ViewData["Title"] = "Create Community";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">Create a new community</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Community Name</label>
                        <div class="input-group">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                        <div class="form-text">Community names including capitalization cannot be changed.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <input type="submit" value="Create Community" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- ======================= 1. الـ Navbar يجب أن يكون هنا ======================= -->
        <!-- نقوم باستدعاء الـ Partial View الذي يحتوي على الـ Navbar -->
        <partial name="_NavBarPartial" />
    </header>

    <div class="container-fluid">
        <div class="row">

            <!-- ======================= الشريط الجانبي ======================= -->
            <nav id="sidebar" class="col-md-3 col-lg-2 d-none d-md-block sidebar">
                <div class="position-sticky pt-3">
                    @if (User.Identity is not null && User.Identity.IsAuthenticated)
                    {
                        @await Component.InvokeAsync("UserCommunities")
                    }
                    
                </div>
            </nav>

            <!-- ======================= المحتوى الرئيسي ======================= -->
            <main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-md-4 main-content">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>